<!doctype html>
<html>
  <head>
    <title>Chargemasters</title>
    <link rel="stylesheet" href="/public/core.css"></link>
    <script src="/public/core_head.js"></script>
  </head>

  <body>
    <h1>What does your hospital charge?</h1>
    
    <form action="#" method="POST">
      <input type="text" size="60" name="loc" value="San Francisco, CA" />
      <input type="submit" value="Set Location" />
    </form>

    <% for (var i = 0; i < data.length; i++) { %>
      <% var mrg = data[i]; %>
      <h2><%= mrg.name %></h2>
      <% for (var j = 0; j < mrg.DRGs.length; j++) { %>
        <% var drg = mrg.DRGs[j]; %>
        <h3>
          <a href="detail.html?code=<%= drg.code %>"><%= drg.name %></a></h3>
      <% } %>
    <% } %>

    <script src="/public/core.js"></script>
    <script>
      $(function() {
      });
    </script>
  </body>
</html>

